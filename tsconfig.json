{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "target": "esnext",
    "useUnknownInCatchVariables": false
  },
  "include": ["src"]
}
